@model IEnumerable<ExamSchedule.Models.Schedule>
@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Schedule";
	Schedule s = new Schedule();
}

<h1>Index</h1>


<div class="row">



</div>
<div class="row">

	<table class=" table">
		<thead>
			<tr>
				<th class="text-center">Order</th>
				<th class="text-center">@Html.DisplayNameFor(m => s.Title)</th>
				<th class="text-center">@Html.DisplayNameFor(m => s.DateRange)</th>
				<th class="text-center">@Html.DisplayNameFor(m => s.Start)</th>
				<th class="text-center">@Html.DisplayNameFor(m => s.End)</th>
				<th class="text-center">@Html.DisplayNameFor(m => s.ExamCount)</th>
				<th class="text-center">@Html.DisplayNameFor(m => s.RestrictionCount)</th>
				<th class="text-center"></th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Count() > 0)
			{
				var i = 1;
				foreach (var item in Model)
				{
					<tr>
						<td class="text-center">
							@(i++)
						</td>
						<td class="text-center">
							@item.Title
						</td>
						<td class="text-center">
							@item.DateRange
						</td>
						<td class="text-center">
							@item.Start
						</td>
						<td class="text-center">
							@item.End
						</td>
						<td class="text-center">
							@item.ExamCount
						</td>
						<td class="text-center">
							<a href="@Url.Action("RestrictionList",new  {id=item.Id })">@item.RestrictionCount</a>
						</td>
						<td class="text-center">
							<a href="@Url.Action("AddRestriction",new {id=item.Id })">Add Restriction</a>
							, Edit, <a href="@Url.Action("Details",new {id=item.Id })">Detail</a>,Delete
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="8">No record found</td>
				</tr>
			}
		</tbody>
	</table>
</div>


